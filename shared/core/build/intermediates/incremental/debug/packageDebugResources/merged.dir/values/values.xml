<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="background_fragment_color">#F6F6F9</color>
    <color name="black">#FF000000</color>
    <color name="disabled_button_box_color">#FBFBFC</color>
    <color name="golden_box_color">#33FFC700</color>
    <color name="golden_text">#FFA800</color>
    <color name="white">#FFFFFFFF</color>
    <item name="progress_bar" type="id"/>
    <string name="golden_score">★ %1$d %2$s</string>
    <string name="price">от %1$s ₽</string>
    <string name="retry">Обновить</string>
    <style name="address" parent="text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#0D72FF</item>
    </style>
    <style name="colorful_plain_text" parent="text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="custom_title" parent="text">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="disabled_button">
        <item name="android:backgroundTint">@color/disabled_button_box_color</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">5dp</item>
    </style>
    <style name="golden_text" parent="text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/golden_text</item>
        <item name="android:background">@drawable/golden_box</item>
    </style>
    <style name="nested_horizontal_info_text" parent="pale_plain_text">
        <item name="android:background">@drawable/grey_box</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">5dp</item>
    </style>
    <style name="pale_plain_text" parent="text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#828796</item>
    </style>
    <style name="text">
        <item name="fontFamily">sf-pro-display</item>
    </style>
    <style name="toolbar">
        <item name="android:background">@color/white</item>
        <item name="titleCentered">true</item>
    </style>
    <style name="upper_case_price" parent="text">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>