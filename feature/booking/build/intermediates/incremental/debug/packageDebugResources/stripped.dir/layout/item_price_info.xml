<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_background"
    android:layout_marginTop="8dp"
    android:padding="16dp">

    <TextView
        android:id="@+id/tour_hint"
        style="@style/pale_plain_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tour"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tour"
        style="@style/colorful_plain_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/tour"
        app:layout_constraintTop_toTopOf="@id/tour_hint"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/fuel_hint"
        style="@style/pale_plain_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fuel_hint"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tour_hint" />

    <TextView
        android:id="@+id/fuel"
        style="@style/colorful_plain_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/fuel_hint"
        app:layout_constraintTop_toTopOf="@id/fuel_hint"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/service_hint"
        style="@style/pale_plain_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/service_hint"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fuel_hint" />

    <TextView
        android:id="@+id/service"
        style="@style/colorful_plain_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/service_hint"
        app:layout_constraintTop_toTopOf="@id/service_hint"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/price_hint"
        style="@style/pale_plain_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price_hint"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/service_hint" />

    <TextView
        android:id="@+id/final_price"
        style="@style/final_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/price_hint"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/price_hint"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>